{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "ES5",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "locale/*.ts"],
  "exclude": ["node_modules", "./dist"]
}
