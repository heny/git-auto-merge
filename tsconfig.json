{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "ES3",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": ["src/*.ts", "locale/*.ts", "src/utils/index.ts", "src/common/constant.ts", "src/common/interface.ts"],
  "exclude": ["node_modules", "./dist"]
}
